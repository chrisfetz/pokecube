<p>
  Add a Card:
  <%= form_with(model: [ @cube, @cube.cube_cards.build ], local: true, id: "selection-card") do |form| %>
  <p>
    <%= form.collection_select(:set_id, Pokemon::Set.all, :code, :name) %>
    <%= form.number_field :card_number, in:1..300, step: 1, id: "card-id" %>
  </p>
  <p>
    <%= form.submit %>
  </p>
  <p>
    <img id="card-preview" alt="card preview" />
  </p>
  <% end %>
  <input type="text" id="card-search-field" /><button id="search-submit">Search</button>
  <div id="card-search">

  </div>
</p>
<%= javascript_include_tag :forced %>
